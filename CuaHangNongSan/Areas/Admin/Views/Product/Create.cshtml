@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}

<h2 class="mb-4">Create New Product</h2>

@model CuaHangNongSan.Models.LatestProduct

@using (Html.BeginForm("Create", "Product", FormMethod.Post, new { enctype = "multipart/form-data", @class = "needs-validation" }))
{
    <div class="form-row">
        <div class="col-md-6 mb-3">
            <label for="ProductName">Product Name</label>
            @Html.TextBoxFor(model => model.Tensp, new { @class = "form-control", required = "required", placeholder = "Enter product name" })
            @Html.ValidationMessageFor(model => model.Tensp, "", new { @class = "text-danger" })
        </div>

        <div class="col-md-6 mb-3">
            <label for="CategoryId">Category</label>
            @Html.DropDownListFor(model => model.CategoryId, (SelectList)ViewBag.Categories, "Select Category", new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="Description">Description</label>
        @Html.TextAreaFor(model => model.Mota, new { @class = "form-control", required = "required", rows = 4, placeholder = "Enter product description" })
        @Html.ValidationMessageFor(model => model.Mota, "", new { @class = "text-danger" })
    </div>

    <div class="form-row">
        <div class="col-md-6 mb-3">
            <label for="Price">Price</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">VND</span>
                </div>
                @Html.TextBoxFor(model => model.Gia, new { @class = "form-control", required = "required", placeholder = "Enter product price", type = "number", step = "0.01" })
                @Html.ValidationMessageFor(model => model.Gia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-6 mb-3">
            <label for="ImageFile">Product Image</label>
            <div class="custom-file">
                <input type="file" class="custom-file-input" id="ImageFile" name="ImageFile" accept="image/*" required>
                <label class="custom-file-label" for="ImageFile"></label>
                @Html.ValidationMessageFor(model => model.Hinh, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Add Product</button>
}
